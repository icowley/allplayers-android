<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
	<ImageView
      android:id="@+id/groupLogo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:adjustViewBounds="true"
      android:scaleType="fitStart">
    </ImageView>
    <TableLayout
      android:layout_below="@+id/groupLogo"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
        <TableRow
          android:gravity="center"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1">
	        <ImageButton
                android:id="@+id/groupMembersButton"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/groups_icon" />
            <ImageButton
                android:id="@+id/groupPhotosButton"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/photos_icon" />
        </TableRow>
        <TableRow
          android:gravity="center"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1">
            <ImageButton
                android:id="@+id/groupEventsButton"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/events_icon" />
            <ImageButton
                android:id="@+id/groupLocationButton"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/events_icon" />
        </TableRow>
    </TableLayout>
    <com.devspark.sidenavigation.SideNavigationView
      android:id="@+id/side_navigation_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
</RelativeLayout>