<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
	<ImageView
      android:id="@+id/groupLogo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:adjustViewBounds="true"
      android:scaleType="fitStart">
    </ImageView>
    <TableLayout
      android:layout_below="@+id/groupLogo"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
        <TableRow
          android:gravity="center"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1">
	        <LinearLayout
	            android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/groupMembersButton"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/member_icon_grouppage" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/groupPhotosButton"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/photo_icon_grouppage" />
            </LinearLayout>
        </TableRow>
        <TableRow
          android:gravity="center"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/groupEventsButton"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/events_icon_grouppage"
                    android:background="@drawable/backgroundstate" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/groupLocationButton"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/location_icon_grouppage" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <com.devspark.sidenavigation.SideNavigationView
      android:id="@+id/side_navigation_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
</RelativeLayout>